<div class="container p-4">
    <div class="row">
        {{#each aparato}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{nombre_aparato}}
                        </h3>
                    </a>
                    <p class="m-2">Precio: {{precio}}</p>
                    <a class="btn btn-secondary" href="/links/editecaparato/{{id_aparato}}">
                        Editar aparato
                    </a>
                    <a class="btn btn-danger" href="/links/deleteaparato/{{id_aparato}}">
                        Eliminar aparato
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
        
        <a class="btn btn-success btn-block" href="/links/crearaparato">
            Agregar aparato
        </a>
    </div>
</div>
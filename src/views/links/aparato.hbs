<div class="container p-4">
    <div class="row">
        {{#each aparato}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{nombre_aparato}}
                        </h3>
                    </a>
                    <p class="m-2">Id aparato: {{id_aparato}}</p>
                    <p class="m-2">Estado: {{estado_aparato}}</p>
                    <a class="btn btn-danger" href="/links/editaparato/{{id_aparato}}">
                        Editar aparato
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
        
        <a class="btn btn-success btn-block" href="/links/crearaparatoadmin">
            Agregar aparato
        </a>
    </div>
</div>
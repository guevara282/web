<div class="container p-4">
    <div class="row">
        {{#each rol}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{rol}}
                        </h3>
                    </a>
                    <p class="m-2">Id rol: {{idrol}}</p>
                    <p class="m-2">Estado: {{estado}}</p>
                    <a class="btn btn-danger" href="/links/deleterol/{{idrol}}">
                        Eliminar rol
                    </a>
                    <a class="btn btn-secondary" href="/links/editrol/{{idrol}}">
                        Editar rol
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
        <a class="btn btn-success btn-block" href="/links/crearrol">
            Agregar
        </a>
    </div>
</div>
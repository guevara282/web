<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/editaparato/{{links.id_aparato}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{links.id_aparato}}" name="id_aparato" class="form-control" readonly="readonly">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{links.nombre_aparato}}" name="nombre_aparato" class="form-control" placeholder="Nombre Aparato" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{links.estado_aparato}}" name="estado_aparato" class="form-control" placeholder="Estado">
                        </div>
                       
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{fecha}}
                        </h3>
                    </a>
                    <p class="m-2">{{direccion}}</p>
                    <p class="m-2">{{barrio}}</p>
                    <p class="m-2">{{nombre_aparato}}</p>
                    <p class="m-2">Tecnico: {{nombre}}</p>
                    <p class="m-2">Monto basico: {{precio}}</p>
                    

                    <p class="text-muted">
                        Servicio en espera
                    </p>
                    <a class="btn btn-danger" href="/links/delete/{{idservicioespera}}">
                        Cancelar servicio
                    </a>
                    <a class="btn btn-secondary" href="/links/edit/{{idservicioespera}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No tienes servicios aun.</p>
                <a href="/links/add">Pide uno!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
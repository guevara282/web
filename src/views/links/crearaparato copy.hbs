<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/crearaparato/" method="POST">
                        <div class="form-group">
                            <select name="id_aparato">
                                {{#each apara}}
                                <option value={{id_aparato}}>{{nombre_aparato}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" name="precio" class="form-control" placeholder="Precio" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/editrol/{{links.idrol}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{links.idrol}}" name="idrol" class="form-control" readonly="readonly">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{links.rol}}" name="rol" class="form-control" placeholder="Nombre rol" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{links.estado}}" name="estado" class="form-control" placeholder="Estado">
                        </div>
                       
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>